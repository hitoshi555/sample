generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Period {
  SPRING
  AUTUMN
}

enum TimeSlot {
  FIRST
  SECOND
  THIRD
  FOURTH
  FIFTH
  SIXTH
  SEVENTH
}

enum Position {
  PROFESSOR
  ASSOCIATEPROFESSOR
  LECTURER
  ASSISTANTPROFESSOR
}

model ClassRoom {
  id          Int       @id @default(autoincrement())
  name        String
  description String
  units       Int
  period      Period
  timeSlot    TimeSlot
  teacher     Teacher[]
}

model Teacher {
  id        Int         @id @default(autoincrement())
  name      String
  position  Position
  classRoom ClassRoom[]
}
